{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "taskName": "batch build",
      "type": "shell",
      "command": "cmd",
      "args": [
        "/C", "build.bat"
      ],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      }
    },
    {
      "taskName": "preMake",
      "type": "shell",
      "command": "cmd",
      "args": [
        "/C", "mkdir build"
      ]
    },
    {
      "taskName": "cmake",
      "type": "shell",
      "command": "cmake",
      "options": {
        "cwd": "${workspaceRoot}/build"
      },
      "args": [
        ".."
      ],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "dependsOn" : ["preMake"]
    }
  ]
}